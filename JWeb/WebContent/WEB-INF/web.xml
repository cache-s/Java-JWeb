<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>ignore</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Index</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Register</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>connect</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Connect</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>connect</servlet-name>
		<url-pattern>/connect</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Disconnect</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Disconnect</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Disconnect</servlet-name>
		<url-pattern>/disconnect</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>RestrictionFilter</filter-name>
		<filter-class>eu.epitech.jweb.filters.RestrictionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RestrictionFilter</filter-name>
		<url-pattern>/private/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>profile</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Profile</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>profile</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>newsletter</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Newsletter</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>newsletter</servlet-name>
		<url-pattern>/newsletter</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>aboutus</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Aboutus</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>aboutus</servlet-name>
		<url-pattern>/aboutus</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>blasters</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Blasters</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>blasters</servlet-name>
		<url-pattern>/blasters</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>spaceships</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Spaceships</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>spaceships</servlet-name>
		<url-pattern>/spaceships</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>shop</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Shop</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>shop</servlet-name>
		<url-pattern>/shop</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>contact</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Contact</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>contact</servlet-name>
		<url-pattern>/contact</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>cart</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Cart</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cart</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>lightsabers</servlet-name>
		<servlet-class>eu.epitech.jweb.servlets.Lightsabers</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>lightsabers</servlet-name>
		<url-pattern>/lightsabers</url-pattern>
	</servlet-mapping>
</web-app>